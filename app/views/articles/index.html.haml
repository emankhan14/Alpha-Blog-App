%table
  %tbody
    %tr
      %td Title
      %td Desc
      %td User ID
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.body
        %td= article.user_id     
        %td= link_to 'Show', article_path(article)
        %td= link_to 'Edit', edit_article_path(article)    
        %td= link_to 'Destroy', article_path(article), |
             method: :delete,                          |
             data: { confirm: 'Are you sure?' }        |
                     
